Задание 1.
#include <stdio.h>
#include <math.h>

int main()
{
    int x1, y1, x2, y2, ab;
    double AB;
    
    printf ("Введите координаты первой точки\n");
    scanf ("%d%d", &x1, &y1);
    printf ("Введите координаты второй точки\n");
    scanf ("%d%d", &x2, &y2);
    ab = (x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1);
    AB = sqrt ((double) ab);
    printf("Расстояние между точками = %g\n", AB);
    return 0;
}

Задание 2.
#include <stdio.h>
#include <math.h>

int main()
{
    int A, B, C, AC, BC, sum;
    
    printf ("Введите значения A, B, C\n");
    scanf ("%d%d%d", &A, &B, &C);
    AC = C - A;
    AC = abs (AC);
    BC = C - B;
    BC = abs (BC);
    sum = AC + BC;
    printf ("AC = %d\n", AC);
    printf ("BC = %d\n", BC);
    printf ("Сумма = %d\n", sum);
    
    return 0;
}

Задание 3.
#include <stdio.h>
#include <math.h>

int main()
{
    int A, B, C, AC, BC, p;
    
    printf ("Введите значения A, B, C\n");
    scanf ("%d%d%d", &A, &B, &C);
    if (A < C && C < B)
    {
    AC = C - A;
    AC = abs (AC);
    BC = C - B;
    BC = abs (BC);
    p = AC * BC;
    printf ("Произведение длин отрезков = %d\n", p);
    }
    else 
    {
      printf ("Условие С между А и В\n");  
    }
    return 0;
}

Задание 4.
#include <stdio.h>
#include <math.h>

int main()
{
    int x1, y1, x2, y2, AB, BC, P, S;
    
    printf ("Введите координаты первой точки\n");
    scanf ("%d%d", &x1, &y1);
    printf ("Введите координаты второй точки\n");
    scanf ("%d%d", &x2, &y2);
    if (x1 == x2 || y1 == y2)
    {
        printf ("Стороны не являются противоположными.\n");
    }
    else
    {
    AB = y2 - y1;
    AB = abs (AB);
    BC = x2 - x1;
    BC = abs (BC);
    P = 2 * (AB + BC);
    S = AB * BC;
    printf("Площадь = %d\n", S);
    printf("Периметр = %d\n", P);
    }
    return 0;
}

Задание 5.
#include <stdio.h>
#include <math.h>

int main()
{
    int x1, y1, x2, y2, x3, y3, ab, bc, ac, P, s;
    double AB, BC, AC, p, S;
    
    printf ("Введите координаты первой точки\n");
    scanf ("%d%d", &x1, &y1);
    printf ("Введите координаты второй точки\n");
    scanf ("%d%d", &x2, &y2);
    printf ("Введите координаты третьей точки\n");
    scanf ("%d%d", &x3, &y3);
    if ((x1 == x2 && y1 == y2) || (x2 == x3 && y2 == y3) || (x1 == x3 && y1 == y3) || (x1 == x2 && x2 == x3) || (y1 == y2 && y2 == y3))
    {
        printf("Не треугольник\n");
        
    } 
    else 
    {
    ab = (x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1);
    AB = sqrt ((double) ab);
    bc = (x3 - x2) * (x3 - x2) + (y3 - y2) * (y3 - y2);
    BC = sqrt ((double) bc);
    ac = (x3 - x1) * (x3 - x1) + (y3 - y1) * (y3 - y1);
    AC = sqrt ((double) ac);
    P = AC + BC + AB;
    p = P * 0.5;
    s = p * (p - AB) * (p - BC) * (p - AC);
    S = sqrt ((double) s);
    printf("Площадь = %g\n", S);
    printf("Периметр = %d\n", P);
    }
    
    return 0;

}
