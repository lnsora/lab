Задание 1.
#include <stdio.h>
#include <math.h>

int main()
{
    int x1, y1, x2, y2, ab;
    double AB;
    
    printf ("Введите координаты первой точки\n");
    scanf ("%d%d", &x1, &y1);
    printf ("Введите координаты второй точки\n");
    scanf ("%d%d", &x2, &y2);
    ab = (x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1);
    AB = sqrt ((double) ab);
    printf("Расстояние между точками = %g\n", AB);
    return 0;
}

Задание 2.
#include <stdio.h>
#include <math.h>

int main()
{
    int A, B, C, AC, BC, sum;
    
    printf ("Введите значения A, B, C\n");
    scanf ("%d%d%d", &A, &B, &C);
    AC = C - A;
    AC = abs (AC);
    BC = C - B;
    BC = abs (BC);
    sum = AC + BC;
    printf ("AC = %d\n", AC);
    printf ("BC = %d\n", BC);
    printf ("Сумма = %d\n", sum);
    
    return 0;
}

Задание 3.
#include <stdio.h>
#include <math.h>

int main()
{
    int A, B, C, AC, BC, p;
    
    printf ("Введите значения A, B, C\n");
    scanf ("%d%d%d", &A, &B, &C);
    if (A < C && C < B)
    {
    AC = C - A;
    AC = abs (AC);
    BC = C - B;
    BC = abs (BC);
    p = AC * BC;
    printf ("Произведение длин отрезков = %d\n", p);
    }
    else 
    {
      printf ("Условие С между А и В\n");  
    }
    return 0;
}
