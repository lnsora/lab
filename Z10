Задание 1.
#include <stdio.h>

int main ()
{
    int A, B;
    
    printf ("Введите A:\n");
    scanf ("%d", &A);
    printf ("Введите B:\n");
    scanf ("%d", &B);
    if (A > 2 && B <= 3)
    {
        printf ("Истина.\n");
    }
    else 
    {
        printf ("Ложь.\n");
    }
    
    return 0;
}

Задание 2.
#include <stdio.h>

int main ()
{
    int A, B, C;
    
    printf ("Введите A:\n");
    scanf ("%d", &A);
    printf ("Введите B:\n");
    scanf ("%d", &B);
    printf ("Введите C:\n");
    scanf ("%d", &C);
    if (A < B && B < C)
    {
        printf ("Истина.\n");
    }
    else 
    {
        printf ("Ложь.\n");
    }
    
    return 0;
}

Задание 3.
#include <stdio.h>

int main ()
{
    int x, y;
    
    printf ("Введите число:\n");
    scanf ("%d", &x);
    y = x % 2;
    if (y > 0)
    {
        printf ("Число нечетное.\n");
    }
    else 
    {
        printf ("Число четное.\n");
    }
    
    return 0;
}

Задание 4.
#include <stdio.h>

int main ()
{
    int x, x1, x2, x3;
    
    printf ("Введите число:\n");
    scanf ("%d", &x);
    if (x > 99)
    {
        x1 = x / 100;
        x2 = (x - x1 * 100) / 10;
        x3 = x - x1 * 100 - x2 * 10;
        if (x1 > x2 && x2 > x3)
        {
            printf ("Цифры данного числа образуют убывающую последовательность.\n");
        }
        else if (x3 > x2 && x2 > x1)
        {
            printf ("Цифры данного числа образуют возрастающую последовательность.\n");
        }
        else 
        {
            printf ("Нет последовательности.\n");
        }
    }
    else if (x < -99)
    {
        x1 = x / 100;
        x2 = (x - x1 * 100) / 10;
        x3 = x - x1 * 100 - x2 * 10;
        if (x1 > x2 && x2 > x3)
        {
            printf ("Цифры данного числа образуют возрастающую последовательность.\n");
        }
        else if (x3 > x2 && x2 > x1)
        {
            printf ("Цифры данного числа образуют убывающую последовательность.\n");
        }
        else 
        {
            printf ("Нет последовательности.\n");
        }
    }
    else 
    {
        printf ("Число должно быть трехзначным.\n");
    }
    
    return 0;
}

Задание 5.
#include <stdio.h>

int main ()
{
    int x, x1, x2, x3, x4;
    
    printf ("Введите число:\n");
    scanf ("%d", &x);
    if (x > 999 || x < -999)
    {
        x1 = x / 1000;
        x2 = (x - x1 * 1000) / 100;
        x3 = (x - x1 * 1000 - x2 * 100) / 10;
        x4 = x - x1 * 1000 - x2 * 100 - x3 * 10;
        if (x1 == x4 && x2 == x3)
        {
            printf ("Данное число читается одинаково слева направо и справа налево.\n");
        }
        else
        {
            printf ("Данное число HE читается одинаково слева направо и справа налево.\n");
        }
    }
    else 
    {
        printf ("Число должно быть четырехзначным.\n");
    }
    
    return 0;
}
