Задание 1.
#include <stdio.h>

int main()
{
    int a, b;
    int S, P;
    
    printf ("Введите значения сторон a, b\n");
    scanf ("%d", &a);
    scanf ("%d", &b);
    S = a * b;
    P = 2 * (a + b);
    printf("Площадь = %d\n", S);
    printf("Периметр = %d\n", P);
    return 0;
}

Задание 2.
#include <stdio.h>

int main()
{
    int d;
    double pi, L;
    
    printf ("Введите диаметр окружности\n");
    scanf ("%d", &d);
    pi = 3.14;
    L = 2.0 * pi * d;
    printf("Длина окружности = %g\n", L);
    return 0;
}

Задание 3.
#include <stdio.h>

int main()
{
    int a, b;
    double sr_a;
    
    printf ("Введите значения a, b\n");
    scanf ("%d", &a);
    scanf ("%d", &b);
    sr_a = (a + b) / 2.0;
    printf("Cреднее арифметическое = %g\n", sr_a);
    return 0;
}

Задание 4.
#include <stdio.h>
#include <math.h>

int main()
{
    int a, b;
    int s, r, p;
    double ch;
    printf ("Введите два ненулевых числа.\n");
    scanf ("%d", &a);
    scanf ("%d", &b);
    if (a == 0 || b == 0)
    {
        printf ("Числа должны быть ненулевыми.\n");
    }
    else 
    {
        a = pow(a, 2);
        b = pow(b, 2);
        s = a + b;
        r = a - b;
        p = a * b;
        ch = (double) a / (double) b;
        printf ("Сумма квадратов = %d\n", s);
        printf("Разность квадратов = %d\n", r);
        printf("Произведение квадратов = %d\n", p);
        printf("Частное квадратов = %g\n", ch);
    }
    return 0;
}

Задание 5.
#include <stdio.h>
#include <math.h>


int main()
{
    int a, b;
    int s, r, p;
    double ch;
    printf ("Введите два ненулевых числа.\n");
    scanf ("%d", &a);
    scanf ("%d", &b);
    if (a == 0 || b == 0)
    {
        printf ("Числа должны быть ненулевыми.\n");
    }
    else 
    {
        a = abs(a);
        b = abs(b);
        s = a + b;
        r = a - b;
        p = a * b;
        ch = (double) a / (double) b;
        printf ("Сумма = %d\n", s);
        printf("Разность = %d\n", r);
        printf("Произведение = %d\n", p);
        printf("Частное = %g\n", ch);
    }
    return 0;
}
