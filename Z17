Задание 1.
#include <stdio.h>

int main()
{
    printf("Введите N:\n");
    int N;
    scanf ("%d", &N);
    printf("Введите последовательность чисел:\n");
    int A[N];
    int b = 1;
    while (b < N + 1)
    {
        printf("A[%d] = ", b);
        scanf("%d", &A[b]);
        b++;
    }
    int K, L;
    printf("Введите номера элементов массива K и L (1 ≤ K ≤ L ≤ N):\n");
    scanf ("%d%d", &K, &L);
    int x = 0;
    int y = 0;
    while (K <= L)
    {
        y = y + A[K];
        K = K + 1;
        x = x + 1;
    }
    double z;
    z = y / (double)x;
    printf("среднее арифметическое элементов массива: %lg\n", z);

    return 0;
}

Задание 2.
#include <stdio.h>

int main()
{
    printf("Введите N:\n");
    int N;
    scanf ("%d", &N);
    printf("Введите последовательность чисел:\n");
    int A[N];
    int b = 1;
    while (b < N + 1)
    {
        printf("A[%d] = ", b);
        scanf("%d", &A[b]);
        b++;
    }
    int x = A[2] - A[1];
    int y = 2;
    int z;
    while (y < N)
    {
        z = A[y + 1] - A[y];
        if (z == x)
        {
            y = y + 1;
        }
        else if (z != x)
        {
            y = N;
            x = 0;
        }
    }
    printf("%d\n ", x);
    
    return 0;    
}

Задание 3.
#include <stdio.h>

int main()
{
    printf("Введите N:\n");
    int N;
    scanf ("%d", &N);
    printf("Введите последовательность чисел:\n");
    int A[N];
    int b = 1;
    while (b < N + 1)
    {
        printf("A[%d] = ", b);
        scanf("%d", &A[b]);
        b++;
    }
    int x = 4;
    int min = A[2];
    while (x < N)
    {
        if (A[x] < min)
        {
            min = A[x];
        }
        x = x + 2;
    }
    printf ("минимальный элемент из его элементов с четными номерами - %d", min);
    
    return 0;
}

Задание 4.
#include <stdio.h>

int main()
{
    printf("Введите N:\n");
    int N;
    scanf ("%d", &N);
    printf("Введите последовательность чисел:\n");
    int A[N];
    int b = 1;
    while (b < N + 1)
    {
        printf("A[%d] = ", b);
        scanf("%d", &A[b]);
        b++;
    }
    int x = 2;
    int lm;
    int y;
    while (x < N)
    {
        if (A[x] > A[x + 1] && A[x] > A[x - 1])
        {
            lm = A[x];
            y = x;
        }
        x = x + 1;
    }
    printf ("номер последнего локального максимума - %d", y);
    
    return 0;
}

