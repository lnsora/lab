Задание 1.
#include <stdio.h>

int main()
{
    printf("Введите N:\n");
    int N;
    scanf ("%d", &N);
    int a[N];
    int i = 1;
    int j = 1;
    for (i; i <= N; i++)
    {
        a[i] = j;
        printf ("a[%d] = %d\n", i, j);
        j = j + 2;
    }
    return 0;
}

Задание 2.
#include <stdio.h>

int main()
{
    printf("Введите N(> 1):\n");
    int N, A, D;
    scanf ("%d", &N);
    printf("Введите первый член геометрической прогрессии:\n");
    scanf ("%d", &A);
    printf("Введите знаменатель геометрической прогрессии:\n");
    scanf ("%d", &D);
    int i = 1;
    int j = A;
    int a[N];
    for (i; i <= N; i++)
    {
        a[i] = j;
        printf ("a[%d] = %d\n", i, j);
        j = j * D;
    }
    return 0;
}

Задание 3.
#include <stdio.h>

int main()
{
    printf("Введите N(> 2):\n");
    int N, A, B;
    scanf ("%d", &N);
    printf("Введите первый элемент:\n");
    scanf ("%d", &A);
    printf("Введите второй элемент:\n");
    scanf ("%d", &B);
    int i = 3;
    int j = A + B;
    int a[N];
    printf ("a[1] =  %d\n", A);
    printf ("a[2] =  %d\n", B);
    for (i; i <= N; i++)
    {
        a[i] = j;
        printf ("a[%d] = %d\n", i, j);
        j = j + a[i];
    }
    return 0;
}

Задание 4.
#include <stdio.h>

int main()
{
    printf("Введите N:\n");
    int N;
    scanf ("%d", &N);
    printf("Введите последовательность чисел:\n");
    int A[N];
    int b = 1;
    while (b < N + 1)
    {
        printf("A[%d] = ", b);
        scanf("%d", &A[b]);
        b++;
    }
    int x = N;
    int n = N / 2;
    b = 1;
    while (b < n + 1)
    {
        printf("%i\n",A[b]);
        printf("%i\n",A[N]);
        N = N - 1;
        b++;
    }
    if (x % 2 != 0 )
    printf("%i\n",A[n + 1]);

    return 0;
}

